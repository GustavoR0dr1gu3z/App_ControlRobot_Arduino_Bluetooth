<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnDesconectar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/strdesc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ButtonUp"
        android:layout_width="120dp"
        android:layout_height="68dp"
        android:text="Up"
        app:layout_constraintBottom_toBottomOf="@+id/btnDesconectar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.145" />

    <Button
        android:id="@+id/ButtonRight"
        android:layout_width="120dp"
        android:layout_height="68dp"
        android:text="Right"
        app:layout_constraintBottom_toTopOf="@+id/ButtonDown"
        app:layout_constraintEnd_toStartOf="@+id/ButtonSaw"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ButtonUp"
        app:layout_constraintTop_toBottomOf="@+id/ButtonUp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ButtonDown"
        android:layout_width="120dp"
        android:layout_height="68dp"
        android:layout_marginTop="68dp"
        android:text="Down"
        app:layout_constraintEnd_toEndOf="@+id/ButtonUp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/ButtonUp"
        app:layout_constraintTop_toBottomOf="@+id/ButtonUp" />

    <Button
        android:id="@+id/ButtonLeft"
        android:layout_width="120dp"
        android:layout_height="68dp"
        android:text="Left"
        app:layout_constraintBottom_toTopOf="@+id/ButtonDown"
        app:layout_constraintEnd_toStartOf="@+id/ButtonUp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonUp"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/ButtonSaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saw"
        app:layout_constraintBottom_toBottomOf="@+id/ButtonRight"
        app:layout_constraintEnd_toEndOf="@+id/ButtonHammer"
        app:layout_constraintStart_toStartOf="@+id/ButtonHammer"
        app:layout_constraintTop_toTopOf="@+id/ButtonRight"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/ButtonFlamethrower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="flamethrower"
        app:layout_constraintBottom_toBottomOf="@+id/ButtonDown"
        app:layout_constraintEnd_toEndOf="@+id/ButtonSaw"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="@+id/ButtonSaw"
        app:layout_constraintTop_toTopOf="@+id/ButtonDown"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/ButtonHammer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="80dp"
        android:text="hammer"
        app:layout_constraintBottom_toBottomOf="@+id/ButtonRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintStart_toEndOf="@+id/ButtonUp"
        app:layout_constraintTop_toTopOf="@+id/ButtonUp"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>